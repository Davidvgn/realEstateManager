<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        tools:context=".ui.add_real_estate.AddRealEstateActivity">

        <TextView
            android:id="@+id/add_form_type_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/type"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            app:chipSpacingHorizontal="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_form_type_title"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_house"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/house" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_flat"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flat" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_loft"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loft" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_duplex"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duplex" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_land"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/land" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_other"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other" />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/add_realEstate_TextView_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/Status"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipGroup" />


        <RadioGroup
            android:id="@+id/radioGroup_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio_button_1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_status">

            <RadioButton
                android:id="@+id/radio_button_to_sale"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:checked="true"
                android:text="@string/forSale" />

            <RadioButton
                android:id="@+id/radio_button_sold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/Sold" />
        </RadioGroup>

        <TextView
            android:id="@+id/add_realEstate_TextView_number_of_rooms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="@string/number_of_rooms"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup_status" />


        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio_button_1"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_number_of_rooms">

            <RadioButton
                android:id="@+id/radio_button_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1" />

            <RadioButton
                android:id="@+id/radio_button_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2" />

            <RadioButton
                android:id="@+id/radio_button_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3" />

            <RadioButton
                android:id="@+id/radio_button_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4" />

            <RadioButton
                android:id="@+id/radio_button_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5+" />
        </RadioGroup>

        <androidx.cardview.widget.CardView
            android:id="@+id/add_realEstate_CardView"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup">

            <androidx.fragment.app.FragmentContainerView android:id="@+id/add_realEstate_autocomplete_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/add_realEstate_TextView_POI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/poi"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_CardView" />

        <CheckBox
            android:id="@+id/add_realEstate_CheckBox_school"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/school"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_POI" />

        <CheckBox
            android:id="@+id/add_realEstate_CheckBox_transportation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/transportation"
            app:layout_constraintStart_toEndOf="@id/add_realEstate_CheckBox_school"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_POI" />

        <CheckBox
            android:id="@+id/add_realEstate_CheckBox_restaurant"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/restaurant"
            app:layout_constraintStart_toEndOf="@id/add_realEstate_CheckBox_transportation"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_POI" />


        <CheckBox
            android:id="@+id/add_realEstate_CheckBox_hospitals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/hospitals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_CheckBox_school" />

        <CheckBox
            android:id="@+id/add_realEstate_CheckBox_pharmacie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/pharmacie"
            app:layout_constraintStart_toEndOf="@id/add_realEstate_CheckBox_hospitals"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_CheckBox_school" />

        <CheckBox
            android:id="@+id/add_realEstate_CheckBox_shops"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/shops"
            app:layout_constraintStart_toEndOf="@id/add_realEstate_CheckBox_pharmacie"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_CheckBox_school" />

        <FrameLayout
            android:id="@+id/photo_list_fragment_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_realEstate_CheckBox_shops" />

        <Button
            android:id="@+id/button_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="16dp"
            android:text="@string/add_pictures"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/photo_list_fragment_container" />

        <TextView
            android:id="@+id/add_realEstate_TextView_dateOfSale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/date_of_sale"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_photo" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_task_TextInputEditText_dateOfSale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:focusableInTouchMode="false"
            android:hint="@string/unspecified"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_dateOfSale" />


        <TextView
            android:id="@+id/add_realEstate_TextView_closingDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/sold_date"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_task_TextInputEditText_dateOfSale" />


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_task_TextInputEditText_closing_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:focusableInTouchMode="false"
            android:hint="@string/unspecified"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextView_closingDate" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_realEstate_TextInputLayout_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_task_TextInputEditText_closing_date">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_realEstate_TextInputEditText_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/price"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_realEstate_TextInputLayout_surface"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextInputLayout_price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_realEstate_TextInputEditText_surface"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/floorArea"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_realEstate_TextInputLayout_real_estate_agent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:bottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextInputLayout_surface">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_task_TextInputEditText_real_estate_agent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/Agent"
                android:inputType="textAutoComplete" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/add_realEstate_TextInputLayout_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            app:hintEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextInputLayout_real_estate_agent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_realEstate_TextInputEditText_description"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="start|top"
                android:hint="@string/description"
                android:inputType="textMultiLine"
                android:paddingTop="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/addbutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:hint="@string/add_realestate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_realEstate_TextInputLayout_description" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>